<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div>
      <% messages.forEach(function(message){ %>
        <div class="message">
          <h3><%= message.user %></h3>
          <p><%= message.text %></p>
          <div>Date: <%= message.added %></div>
        </div>
      <% }); %>
    </div>
    <a href="/new">Send Message</a>
  </body>
</html>
